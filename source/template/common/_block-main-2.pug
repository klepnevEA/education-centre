	.block-main__video
		video(autoplay, loop)
			source(src="../video/bg-2.mp4", type="video/mp4")
	.block-main__slider
		ul.block-main__list
			li.block-main__elem(style="background-image:url(img/slider-main/s1.jpg)")
			li.block-main__elem(style="background-image:url(img/slider-main/s2.jpg)")
			li.block-main__elem(style="background-image:url(img/slider-main/s3.jpg)")
			li.block-main__elem(style="background-image:url(img/slider-main/s4.jpg)")
			li.block-main__elem(style="background-image:url(img/slider-main/s5.jpg)")
